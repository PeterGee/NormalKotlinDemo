<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
            android:id="@+id/btnGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同步GET请求" />

    <Button
            android:id="@+id/btnGetTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="异步GET请求" />

    <Button
            android:id="@+id/btnGetHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="访问headers" />
    <Button
            android:id="@+id/btnPostString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="post String" />
    <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="post基本请求" />

    <Button
            android:id="@+id/btnPostStream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="post Stream" />

    <TextView
            android:id="@+id/tvResponseContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="16sp"
            tool:text="响应数据:" />
</androidx.appcompat.widget.LinearLayoutCompat>